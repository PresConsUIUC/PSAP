<!DOCTYPE html>
<html>
<head>
  <title>PSAP | <%= yield(:title) %></title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track' => true %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
<%= render 'layouts/header' %>

<div class="container">
  <header class="page-header">
    <%= link_to image_tag('psap.png', size:'70x70', alt:'PSAP logo',
                          id:'title_logo'), root_path %>

    <h1>
      <%= link_to 'PSAP', root_path %>
      <small><%= link_to 'Preservation Self-Assessment Program', root_path %></small>
    </h1>

    <% if signed_in? && current_user.institution %>
        <div class="btn-group">
          <button type="button" class="btn btn-default btn-sm dropdown-toggle"
                  data-toggle="dropdown">
            <%= current_user.institution.name %> <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Overview', polymorphic_url(current_user.institution) %></li>
            <% if @user_institution_repositories.any? %>
                <li class="divider"></li>
                <% @user_institution_repositories.each do |repo| %>
                    <li><%= link_to repo.name, repo %></a></li>
                <% end %>
            <% end %>
          </ul>
        </div>
    <% end %>
  </header>

  <% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %>">
        <%= message %>
      </div>
  <% end %>

  <% if current_page?(new_assessment_path) || current_page?(report_path) %>
      <ul class="nav nav-tabs">
        <li><a href="">Collections</a></li>
        <li <%= 'class=active' if current_page?(new_assessment_path) %>>
          <%= link_to 'Perform Assessment', new_assessment_path %>
        </li>
        <li <%= 'class=active' if current_page?(report_path) %>>
          <%= link_to 'View Report', report_path %>
        </li>
      </ul>
  <% end %>

  <div style="clear:both"></div>

  <%= yield %>

  <%= render 'layouts/footer' %>

  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>

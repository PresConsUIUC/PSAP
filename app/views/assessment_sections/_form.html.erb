<%= render 'shared/error_messages', :object => f.object %>

<div class="form-group has-feedback">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <span class="glyphicon form-control-feedback"></span>
</div>

<div class="form-group has-feedback">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  <span class="glyphicon form-control-feedback"></span>
</div>

<div class="form-group has-feedback">
  <%= f.label :index, 'Appearing After' %>
  <%= f.collection_select :index,
                          AssessmentSection.order(:index), :index, :name,
                          { include_blank: true, selected: f.object.index.to_i - 1 },
                          { class: 'form-control' } %>
</div>

<%= f.hidden_field :assessment_id, value: Assessment.limit(1)[0].id %>

<% provide(:title, 'Reset Password') %>

<div class="psap-page-title">
  <h1>Reset your password</h1>
</div>

<%= form_for @user, url: url_for(controller: 'password', action: 'reset_password'), method: :post do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <%= f.hidden_field :username, value: @user.username %>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <p id="password_status" class="text-warning"></p>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirm Password' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <p id="password_confirmation_status"></p>
    </div>

    <%= f.hidden_field :password_reset_key, value: @user.password_reset_key %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

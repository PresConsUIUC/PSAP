<h1>Collections</h1>

<% if @collections.any? %>
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @collections.each do |resource| %>
          <tr>
            <td><%= resource.name %></td>
            <td><%= link_to 'Show', resource %></td>
            <td><%= link_to 'Edit', edit_collection_path(resource) %></td>
            <td><%= link_to 'Destroy', resource, method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p>There are no collections.</p>
<% end %>

<p><%= link_to 'New Collection', new_collection_path %></p>
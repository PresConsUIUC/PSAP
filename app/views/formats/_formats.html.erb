<% # Will be read by updateResultsCount() in JS %>
<input type="hidden" name="results_count" value="<%= @formats.count %>">

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th>Name</th>
    <th>Score / 1</th>
    <th>Obsolete</th>
  </tr>
  </thead>
  <tbody>
  <% @formats.each do |format| %>
      <tr>
        <td>
          <%= link_to 'Edit', edit_format_path(format) %>
        </td>
        <td>
          <%= link_to 'Delete', format, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= link_to format.name, format %></td>
        <td><%= format.score %></td>
        <td><%= format.obsolete ? 'Yes' : 'No' %></td>
      </tr>
  <% end %>
  </tbody>

</table>

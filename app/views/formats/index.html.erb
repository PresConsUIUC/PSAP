<% provide(:title, 'Formats') %>

<ol class="breadcrumb">
  <li class="active">Formats</li>
</ol>

<div class="row">
  <div class="col-md-8">
    <h1>Formats</h1>
  </div>
  <div class="col-md-4" style="text-align:right">
    <div class="btn-group">
      <%= link_to new_format_path, class: 'btn btn-default' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          Add Format
      <% end %>
    </div>

    <%= form_tag formats_path, method: 'get', id: 'formats_search',
        class: 'entity_search' do %>
      <%= search_field_tag :q, params[:q], placeholder: 'Search',
                           class: 'form-control' %>
    <% end %>
  </div>
</div>

<div id="formats">
  <%= render 'formats' %>
</div>

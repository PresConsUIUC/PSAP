<%= render 'shared/error_messages', :object => f.object %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :parent %>
  <%= select('format', 'parent_id',
             format_hierarchy_options_for_select,
             { include_blank: 'None (Top-Level)' },
             { class: 'form-control' }) %>
</div>

<div class="form-group">
  <%= f.label :score, raw('Score (0&ndash;1)') %>
  <%= f.number_field :score, min: 0, max: 1, maxlength: 1, step: 0.1,
                     class: 'form-control' %>
</div>

<div class="form-group">
  <div class="radio">
    <%= f.radio_button :obsolete, 0, checked: !@format.obsolete? %>
    <%= f.label :obsolete_0, 'Not Obsolete' %>
  </div>
  <div class="radio">
    <%= f.radio_button :obsolete, 1, checked: @format.obsolete? %>
    <%= f.label :obsolete_1, 'Obsolete' %>
  </div>
</div>

<div class="form-group addable_removable">
  <%= f.label :temperature_ranges, 'Temperature Range Scores' %>

  <table cellpadding="0" cellspacing="0" border="0">
    <thead>
    <tr>
      <th>Min (&deg;F)</th>
      <th>Max (&deg;F)</th>
      <th>Score</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= f.fields_for :temperature_ranges do |g| %>
        <tr class="addable_removable_input_group">
          <td>
            <%= g.number_field :min_temp_f, min: 0, max: 100, maxlength: 4,
                               class: 'form-control' %>
          </td>
          <td>
            <%= g.number_field :max_temp_f, min: 0, max: 100, maxlength: 4,
                               class: 'form-control' %>
          </td>
          <td>
            <%= g.number_field :score, min: 0, max: 100, maxlength: 4,
                               class: 'form-control' %>
          </td>
          <td>
            <button class="btn btn-default btn-sm remove" type="button">
              <span class="glyphicon glyphicon-minus"></span>
            </button>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <button class="btn btn-default btn-sm add" type="button">
    <span class="glyphicon glyphicon-plus"></span>
  </button>
</div>
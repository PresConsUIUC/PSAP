<% provide(:title, 'Users') %>

<% if current_user.is_admin? %>
  <ol class="breadcrumb">
    <li class="active">Users</li>
  </ol>
<% end %>

<div class="pull-right">
  <%= link_to "mailto:psap@library.illinois.edu?bcc=#{@emailable_addresses.map{ |a| CGI::escape(a) }.join(',')}",
              class: 'btn btn-default' do %>
    <i class="fa fa-envelope"></i> Email Confirmed Users
  <% end %>

  &nbsp;

  <%= form_tag users_path, method: 'get', class: 'psap-live-search',
               style: 'float:right' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= search_field_tag :q, params[:q], placeholder: 'Search',
                         class: 'form-control' %>
  <% end %>
</div>

<div class="psap-page-title">
  <h1>Users <small class="entity_count"></small></h1>
</div>

<div id="users">
  <%= render 'users' %>
</div>

<%= render 'shared/error_messages', :object => f.object %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :resource_type %>
  <%= select('resource', 'resource_type',
             options_for_select([['Collection', ResourceType::COLLECTION],
                                 ['Item', ResourceType::ITEM]]),
             { include_blank: false },
             { class: 'form-control' }) %>
</div>

<div class="form-group">
  <%= f.label :format %>
  <%= f.collection_select :format_id, Format.all.order(:name), :id, :name,
                          { include_blank: false },
                          { class: 'form-control' } %>
</div>

<div class="form-group addable_removable">
  <%= f.label :resource_dates, 'Date(s)' %>

  <%= f.fields_for :resource_dates do |g| %>
      <div class="addable_removable_input_group well">
        <%= f.label 'Type' %>
        <%= select('resource[resource_dates_attributes][0]', 'date_type',
                   options_for_select([['Single', DateType::SINGLE],
                                       ['Span/Inclusive', DateType::SPAN],
                                       ['Bulk', DateType::BULK]]),
                   { include_blank: false },
                   { class: 'form-control date_type' }) %>
        <div class="input-group begin_date">
          <%= g.label 'Begin date' %>
          <div class="row">
            <div class="col-xs-4">
              <%= g.text_field :begin_year, class: 'form-control year',
                               maxlength: 4, placeholder: 'YYYY' %>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :begin_month, class: 'form-control month',
                               maxlength: 2, placeholder: 'MM' %>
              <span class="help-block">(optional)</span>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :begin_day, class: 'form-control day',
                               maxlength: 2, placeholder: 'DD' %>
              <span class="help-block">(optional)</span>
            </div>
          </div>
        </div>
        <div class="input-group end_date">
          <%= g.label 'End date' %>
          <div class="row">
            <div class="col-xs-4">
              <%= g.text_field :end_year, class: 'form-control year',
                               maxlength: 4, placeholder: 'YYYY' %>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :end_month, class: 'form-control month',
                               maxlength: 2, placeholder: 'MM' %>
              <span class="help-block">(optional)</span>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :end_day, class: 'form-control day',
                               maxlength: 2, placeholder: 'DD' %>
              <span class="help-block">(optional)</span>
            </div>
          </div>
        </div>
        <div class="input-group date">
          <%= g.label 'Date' %>
          <div class="row">
            <div class="col-xs-4">
              <%= g.text_field :year, class: 'form-control year',
                               maxlength: 4, placeholder: 'YYYY' %>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :month, class: 'form-control month',
                               maxlength: 2, placeholder: 'MM' %>
              <span class="help-block">(optional)</span>
            </div>
            <div class="col-xs-4">
              <%= g.text_field :day, class: 'form-control day',
                               maxlength: 2, placeholder: 'DD' %>
              <span class="help-block">(optional)</span>
            </div>
          </div>
        </div>
        <button class="btn btn-default remove" type="button">Remove</button>
  <% end %>

  </div>
  <button class="btn btn-default add" type="button">Add Date</button>
</div>

<div class="form-group addable_removable">
  <%= f.label :creators, 'Creator(s)' %>

  <%= f.fields_for :creators do |g| %>
      <div class="addable_removable_input_group well">
        <%= select('resource[creators_attributes][0]', 'creator_type',
                   options_for_select([['Person', CreatorType::PERSON],
                                       ['Company', CreatorType::COMPANY]]),
                   { include_blank: false },
                   { class: 'form-control' }) %>
        <%= g.text_field :name, class: 'form-control' %>
        <button class="btn btn-default remove" type="button">Remove</button>
  <% end %>

  </div>
  <button class="btn btn-default add" type="button">Add Creator</button>
</div>

<div class="form-group addable_removable">
  <%= f.label :extents, 'Subject(s)' %>

  <%= f.fields_for :subjects do |g| %>
      <div class="addable_removable_input_group">
        <div class="input-group">
          <%= g.text_field :name, class: 'form-control' %>
          <span class="input-group-btn">
          <button class="btn btn-default remove" type="button">Remove</button>
        </span>
        </div>
      </div>
  <% end %>

  <button class="btn btn-default add" type="button">Add Subject</button>
</div>


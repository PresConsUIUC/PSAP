<% provide(:title, 'New Resource Assessment') %>

<ol class="breadcrumb">
  <% if current_user.is_admin? %>
      <li><%= link_to 'Institutions', institutions_path %></li>
  <% end %>
  <li>
    <%= link_to @resource.location.repository.institution.name,
                polymorphic_path(@resource.location.repository.institution) %>
  </li>
  <li>
    <%= link_to @resource.location.repository.name,
                polymorphic_path(@resource.location.repository) %>
  </li>
  <li>
    <%= link_to @resource.location.name,
                polymorphic_path(@resource.location) %>
  </li>
  <li class="active">New Resource Assessment</li>
</ol>

<div class="row">
  <div class="btn-group" style="float:right; margin-top:1em;">
    <button type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-cloud"></span> Save
    </button>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="glyphicon glyphicon-save"></span> Export
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#">Some Format</a></li>
        <li><a href="#">Some Other Format</a></li>
      </ul>
    </div>
    <button type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-trash"></span> Delete
    </button>
  </div>
</div>

<h1>New Resource Assessment</h1>

<div class="row" id="assessment">

  <!-- left column menu -->
  <div class="entity_menu col-md-3">
    <nav>
      <ul class="list-group">
        <li class="list-group-item">
          <a href="#" data-open="general">General</a>
        </li>
        <li class="list-group-item">
          <a href="#" data-open="use_access">Use/Access</a>
        </li>
        <li class="list-group-item">
          <a href="#" data-open="storage_container">Storage/Container</a>
        </li>
        <li class="list-group-item">
          <a href="#" data-open="condition">Condition</a>
        </li>
      </ul>
    </nav>
    <section>
      <div class="center">
        <h4>Score</h4>
        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar"
               aria-valuenow="0.4" aria-valuemin="0" aria-valuemax="1"
               style="width: 40%">
            <span class="sr-only"></span>
          </div>
        </div>
      </div>
      <p>[Brief explanation of how this set of questions affects overall preservation score]</p>
      <div class="center">
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </section>
  </div>

  <div id="general" class="col-md-9 form_view">
    <h2>General</h2>
    <%= form_for(@resource, url: location_resources_path(@location)) do |f| %>
        <%= render 'form', :f => f %>
        <%= f.submit 'Create Resource', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div id="use_access" class="col-md-9 form_view">
    <h2>Use/Access</h2>
    <p>This is the use/access section.</p>
  </div>

  <div id="storage_container" class="col-md-9 form_view">
    <h2>Storage/Container</h2>

    <p>Is the item in an appropriate container in good condition?</p>
    <div class="radio">
      <label>
        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">Yes
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">No
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="optionsRadios" id="optionsRadios4" value="option4">Unsure
      </label>
    </div>

  </div>

  <div id="condition" class="col-md-9 form_view">
    <h2>Condition</h2>
    <p>This is the condition section.</p>
  </div>

</div>

<% provide(:title, 'New Resource') %>

<h1>New Resource</h1>

<%= form_for(@resource) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :resource_type %>
      <%= select_tag(:resource_type, options_for_select([['Collection', ResourceType::COLLECTION],
                                                         ['Item', ResourceType::ITEM]],
                                                        ResourceType::ITEM),
                     class: 'form-control') %>
    </div>

    <%= f.submit 'Create Resource', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Resources', resources_path %>
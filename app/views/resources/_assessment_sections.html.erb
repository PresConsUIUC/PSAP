<div id="sections">
  <nav>
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><a href="#basic_info">Basic Info</a></li>
      <% assessment_sections.each do |section| %>
          <li data-section-id="<%= section.id %>">
            <a href="#<%= section.name.gsub('/', '_').gsub(' ', '_') %>"><%= section.name %>
            <small>(<span class="assessment-question-count">0</span>)</small></a>
          </li>
      <% end %>
    </ul>
  </nav>

  <div class="center">
    <div class="question_response_count_container">
      <span class="complete-assessment-question-count">0</span> of
      <span class="total-assessment-question-count">0</span> questions complete
    </div>

    <h4>Score</h4>
    <div class="progress">
      <div class="progress-bar progress-bar-info score" role="progressbar"
           aria-valuenow="0" aria-valuemin="0" aria-valuemax="1"
           style="width:0%">
        <span class="sr-only"></span>
      </div>
    </div>
  </div>

  <!-- Save button -->
  <div class="center">
    <button type="button" class="btn btn-default save">
      <span class="glyphicon glyphicon-cloud"></span> Save
    </button>
  </div>
</div>
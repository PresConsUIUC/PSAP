<% provide(:title, 'All Locations') %>

<ol class="breadcrumb">
  <% if current_user.is_admin? %>
      <li><%= link_to 'Institutions', institutions_path %></li>
  <% end %>
  <li>
    <%= link_to @repository.institution.name,
                polymorphic_path(@repository.institution) %>
  </li>
  <li>
    <%= link_to @repository.name,
                polymorphic_path(@repository) %>
  </li>
  <li class="active">Locations</li>
</ol>

<h1>Locations</h1>

<%= will_paginate %>

<table class="table table-striped table-hover">
  <thead>
    <th></th>
    <th></th>
    <th>Location</th>
    <th>Resources</th>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
      <tr>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Delete', location, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to location.name, location %></td>
        <td><%= location.resources.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>

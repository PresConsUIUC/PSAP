<% provide(:title, 'All Locations') %>
<h1>All Locations</h1>

<%= will_paginate %>

<table class="table table-striped table-hover">
  <thead>
    <th></th>
    <th></th>
    <th>Location</th>
    <th>Resources</th>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
      <tr>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Delete', location, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to location.name, location %></td>
        <td><%= location.resources.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>

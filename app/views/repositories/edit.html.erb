<% provide(:title, "Edit #{@repository.name}") %>

<h1><%= @repository.name %></h1>

<%= form_for(@repository) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit 'Save Changes', class: 'btn btn-large btn-primary' %>
<% end %>

<% provide(:title, 'New Repository') %>

<ol class="breadcrumb">
  <% if current_user.is_admin? %>
    <li><%= link_to 'Institutions', institutions_path %></li>
  <% end %>
  <li>
    <%= link_to @repository.institution.name,
                polymorphic_path(@repository.institution) %>
  </li>
  <li class="active">New Repository</li>
</ol>

<div class="psap-page-title">
  <h1>New Repository</h1>
</div>

<%= form_for(@repository) do |f| %>
    <%= render 'form', :f => f %>
    <%= f.submit 'Create Repository', class: 'btn btn-primary' %>
<% end %>

<% # Will be read by PSAP.updateResultsCount() in JS %>
<input type="hidden" name="results_count" value="<%= @locations.total_entries %>">

<ul class="psap-entity-list">
  <% @locations.each do |location| %>
    <li>
      <span class="title">
        <%= entity_icon(location) %>
        <%= link_to location.name, location %>
      </span>
      <small>
        <%= entity_icon(Resource, pluralize(location.resources.count, 'resource')) %>
        <%= location.resources.count %>
      </small>
      <br>
      <span class="description"><%= location.description %></span>
    </li>
  <% end %>
</ul>

<div class="text-center">
  <%= will_paginate @locations, renderer: BootstrapPagination::Rails %>
</div>

<% provide(:title, @repository.name) %>

<ol class="breadcrumb">
  <% if current_user.is_admin? %>
      <li><%= link_to 'Institutions', institutions_path %></li>
  <% end %>
  <li>
    <%= link_to @repository.institution.name,
                polymorphic_path(@repository.institution) %>
  </li>
  <li class="active"><%= @repository.name %></li>
</ol>

<div class="row">
  <div class="col-md-8">
    <h1><%= @repository.name %> <small>Repository</small></h1>
  </div>
  <div class="col-md-4" style="text-align:right">
    <div class="btn-group">
      <!-- Edit -->
      <%= link_to edit_repository_path(@repository), class: 'btn btn-default' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-pencil') %>
          Edit
      <% end %>
      <!-- Add Location -->
      <%= link_to new_repository_location_path(@repository), class: 'btn btn-default' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          Add Location
      <% end %>
      <!-- Delete -->
      <%= link_to repository_path(@repository), method: 'delete',
                  class: 'btn btn-default',
                  data: { confirm: 'Deleting this repository will delete all '\
                          'locations and resource assessments it contains. '\
                          'Are you sure you want to delete this repository?' } do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-trash') %>
          Delete
      <% end %>
    </div>
  </div>
</div>

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#locations" data-toggle="tab">Locations</a>
  </li>
</ul>

<div class="tab-content">

  <div class="tab-pane active" id="locations">
    <% if @repository.locations.any? %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @repository.locations.order(:name).each do |location| %>
              <tr>
                <td>
                  <%= link_to 'Edit', edit_location_path(location) %>
                </td>
                <td><%= link_to location.name, location %></td>
                <td><%= location.resources.count %>
                  <%= location.resources.count == 1 ? 'resource' : 'resources' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <p>This repository has no locations.</p>
    <% end %>
  </div>
</div>
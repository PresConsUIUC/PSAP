<div class="row">
  <div class="col-sm-6">
    <ul>
      <li><%= institution.resources.length %> total items</li>
      <li><%= all_assessed_items.length %> items assessed</li>
      <% if institution_formats.any? %>
        <li>Formats present:
          <ul>
            <% institution_formats.each do |format| %>
                <li><%= link_to(format.name, format_id_guide_category_path(
                                                   format.format_id_guide_page,
                                                   anchor: format.format_id_guide_anchor), target: '_blank') %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>

    <% if all_assessed_items.any? %>
      <table class="table">
        <tr>
          <td><%= (stats[:mean] * 100).round %></td>
          <td>Average/Mean</td>
        </tr>
        <tr>
          <td><%= (stats[:median] * 100).round %></td>
          <td>Median</td>
        </tr>
        <tr>
          <td><%= (stats[:high] * 100).round %></td>
          <td>High</td>
        </tr>
        <tr>
          <td><%= (stats[:low] * 100).round %></td>
          <td>Low</td>
        </tr>
      </table>
    <% end %>
  </div>

  <!-- chart column -->
  <div class="col-sm-6">
    <%= chart_for_collection(institution) if all_assessed_items.any? %>
  </div>
</div>

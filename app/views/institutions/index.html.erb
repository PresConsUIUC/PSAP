<% provide(:title, 'Institutions') %>

<ol class="breadcrumb">
  <% if current_user.is_admin? %>
      <li class="active">Institutions</li>
  <% end %>
</ol>

<div class="row">
  <div class="col-sm-7">
    <h1>Institutions <small class="entity_count">
      <%= @institutions.total_entries %> total</small></h1>
  </div>
  <div class="col-sm-5" style="text-align:right">
    <div class="btn-group">
      <%= link_to new_institution_path, class: 'btn btn-default' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          Add Institution
      <% end %>
    </div>
  </div>
</div>

<div id="institutions">
    <%= render 'institutions' %>
</div>

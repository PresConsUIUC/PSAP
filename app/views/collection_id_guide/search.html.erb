<% provide(:body_id, 'collection_id_guide_results') %>
<% provide(:title, 'Collection ID Guide') %>

<ol class="breadcrumb">
  <li>
    <%= link_to 'Collection ID Guide', collection_id_guide_path %>
  </li>
  <li class="active">Search</li>
</ol>

<div class="pull-right">
  <form method="get" action="" class="form-inline psap-live-search"
        style="float:right; max-width:100%">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-search"></i></span>
      <%= search_field_tag :q, params[:q], placeholder: 'Search', class: 'form-control' %>
    </div>
  </form>
</div>

<div class="psap-page-title">
  <h1 class="results-summary"><%= @results_summary %></h1>
</div>

<div id="results">
  <%= render 'results' %>
</div>

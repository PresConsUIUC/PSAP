gem 'invisible_captcha' # used in forgot-password form
gem 'jbuilder'
gem 'jquery-rails'
gem 'js_cookie_rails'
gem 'local_time'
gem 'magnific-popup-rails' # image viewer used in the Collection ID Guide
gem 'nokogiri'
gem 'pg'
gem 'prawn' # used to generate a PDF version of the assessment report
gem 'prawn-table'
gem 'rails', '5.0.7.2'
gem 'recaptcha' # used in new-user signup form
gem 'roo' # used to import seed data from xlsx
gem 'sass-rails'
gem 'therubyracer'
gem 'uglifier', '>= 1.3.0'
gem 'will_paginate'
gem 'will_paginate-bootstrap'

